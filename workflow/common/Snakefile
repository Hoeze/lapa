
rule chrom_sizes:
    input:
        fasta = fasta
    output:
        chrom_sizes = config['common']['chrom_sizes']
    shell:
        "faidx {input.fasta} -i chromsizes > {output.chrom_sizes}"


rule site_motif:
    output:
        motif_logo = "reports/figures/polyA_motif.pdf"
    script:
        "polyA_motif.py"


rule gtf_tes:
    input:
        gtf = gtf
    output:
        tes = config['annotation']['tes']
    script:
        "gtf_tes.py"
